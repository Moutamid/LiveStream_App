<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appClr"
    tools:context=".Profile_Activity">

    <TextView
        android:id="@+id/text_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:textColor="@color/blue"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="My Contact Details"
                android:textColor="@color/baseClr"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Name"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/name_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_cardclr"
                android:gravity="left"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:text="UserName"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Email"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_cardclr"
                android:gravity="left"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:text="abc@gmail.com"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Password"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/password_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_cardclr"
                android:gravity="left"
                android:padding="10dp"
                android:inputType="textPassword"
                android:text="********"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="My Location Details"
                android:textColor="@color/baseClr"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Address 1"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/address_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_cardclr"
                android:gravity="left"
                android:padding="10dp"
                android:inputType="textPostalAddress"
                android:text="Address"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="City/State/Province"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/city_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_cardclr"
                android:gravity="left"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text="City"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Country"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/country_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_cardclr"
                android:gravity="left"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:text="CountryName"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="My Phone Details"
                android:textColor="@color/baseClr"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Phone #"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/phone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_cardclr"
                android:gravity="left"
                android:padding="10dp"
                android:text="+92 1234 1234 122"
                android:textColor="@color/white"
                android:inputType="phone"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_red"
                android:gravity="center"
                android:padding="10dp"
                android:text="UPDATE"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>